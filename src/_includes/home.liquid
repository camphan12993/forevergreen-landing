---
layout: base.liquid
---
<!-- banner -->
<div class='min-h-screen relative'>
  <img alt='bg' class='absolute h-full w-full object-cover object-center' src='/assets/imgs/bg.jpg'>
  <div class='absolute inset-0 banner-gradient'></div>
  <div class='absolute right-6 bottom-0 socials flex flex-col'>
    {% for item in settings.header.socials %}
      <a href="{{item.url}}" class='text-white hover:text-primary transition duration-500 mb-3'>
        <ion-icon name="{{item.icon}}" class='text-xl'></ion-icon>
      </a>
    {% endfor %}
  </div>
</div>

<!-- category -->
<section class='section container sm:flex sm:items-center sm:justify-center'>
  {% for item in categories %}
    <div class='w-full mb-4 sm:w-1/3 px-3'>
      <div class='w-full pb-full bg-white rounded-lg relative' style='background-image: url({{item}});background-position: center;background-repeat: no-repeat;background-size: cover;'></div>
    </div>
  {% endfor %}
</section>

<!-- about us -->
<section class='section container'>
  <h2 class='uppercase text-3xl sm:text-4xl text-white text-center mb-4'>
    About Us
  </h2>
  <p class='text-center text-white mb-10'>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Velit quaerat blanditiis eos omnis, ullam, veniam quidem nulla accusantium aperiam cum voluptas officia, adipisci nobis nisi illo dolore aliquam eaque architecto.</p>
  <div class='relative pb-1/2 sm:pb-1/3'>
    <img alt='about' class='absolute h-full w-full object-center object-cover rounded-lg' src='/assets/imgs/bg.jpg'>
  </div>
</section>

<!-- project -->
<section class='container section mb-16'>
  <div class='sm:flex mb-10'>
    <div class='sm:w-1/3 mr-3'>
      <h2 class='uppercase text-4xl text-white mb-4'>
        {{projects.title}}
      </h2>
      <p class='text-white mb-4'>{{projects.description}}</p>
      <a class='text-white border rounded px-4 py-2 border-white hover:bg-white hover:text-secondary transition duration-300' href='#collections'>Explore More</a>
    </div>
    <div class='hidden sm:block sm:flex-1 rounded-lg' style='background-image: url({{projects.image}});background-position: center;background-repeat: no-repeat;background-size: cover;'></div>
  </div>
  <div class='swiper-container overflow-hidden h-56  w-full'>
    <div class='swiper-wrapper'>
      {% for item in data.projects %}
        <div class='swiper-slide rounded-lg' style='background-image: url({{item.images[0]}});background-position: center;background-repeat: no-repeat;background-size: cover;'></div>
      {% endfor %}
    </div>
    <div class='swiper-button-next'></div>
    <div class='swiper-button-prev'></div>
    <!-- Add Pagination -->
  </div>
</section>

<!-- decor -->
<section class='bg-gray-800 mb-8 pb-full sm:pb-1/2 lg:pb-1/3 relative'>
  <img alt='bg' class='absolute h-full w-full object-cover object-center' src='/assets/imgs/bg.jpg'>
  <div class='intro-section absolute inset-0'></div>
  <div class='absolute inset-0 container flex items-center'>
    <div class='w-full sm:w-1/2 md:w-1/3'>
      <h2 class='uppercase text-4xl text-white mb-4'>
        Decorations
