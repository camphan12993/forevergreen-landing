---
layout: base.liquid
---
<!-- banner -->
<div class='min-h-screen relative'>
  <img alt='bg' class='absolute h-full w-full object-cover object-center' src='/assets/imgs/bg.jpg'>
  <div class='absolute inset-0 banner-gradient'></div>
  <div class='absolute container flex flex-col justify-center inset-0'>
    <h1 class='text-3xl sm:text-5xl text-white font-semibold leading-tight mb-3' data-aos='fade-right'>
      {{ title }}
    </h1>
    <p class='text-md sm:text-lg text-white mb-10' data-aos-delay='200' data-aos='fade-left'>
      {{ description }}
    </p>
    <span>
      <a class='duration-300 transition border-white border-2 text-white font-medium py-3 px-10 hover:bg-white hover:text-secondary' href='#about'>
        Explore
      </a>
    </span>

  </div>
  <div class='absolute right-6 bottom-6 socials flex flex-col'>
    {% for item in settings.header.socials %}
      <a href="{{item.url}}" class='text-white hover:text-primary transition duration-500 mb-3'>
        <ion-icon name="{{item.icon}}" class='text-xl'></ion-icon>
      </a>
    {% endfor %}
  </div>
  <div class='absolute text-center bottom-10 w-full z-20'>
    <a href='#about'>
      <ion-icon class='text-white text-4xl animate-bounce cursor-pointer hover:opacity-60 transition duration-300' name='chevron-down-outline'></ion-icon>
    </a>
  </div>
</div>

<!-- category -->
<section class='section container sm:flex sm:items-center sm:justify-center'>
  {% for item in categories %}
    <div class='w-full mb-6 sm:mb-0 sm:w-1/3 sm:px-4' data-aos='fade-up' data-aos-delay="{{forloop.index | minus:1 | times: 200}}">
      <div class='w-full pb-full bg-white rounded-lg relative' style='background-image: url({{item}});background-position: center;background-repeat: no-repeat;background-size: cover;'></div>
    </div>
  {% endfor %}
</section>

<!-- about us -->
<section class='section container' id='about'>
  <h2 class='uppercase text-3xl sm:text-4xl text-white text-center mb-4' data-aos='fade-up'>
    About Us
  </h2>
  <p class='text-center text-white mb-10  md:w-2/3 m-auto' data-aos-delay='200' data-aos='fade-right'>Lorem ipsum dolor sit amet consectetur, adipisicing elit. Velit quaerat blanditiis eos omnis, ullam, veniam quidem nulla accusantium aperiam cum voluptas officia, adipisci nobis nisi illo dolore aliquam eaque architecto.</p>
  <div class='relative pb-1/2 sm:pb-1/3' data-aos-delay='400' data-aos='fade-right'>
    <img alt='about' class='absolute h-full w-full object-center object-cover rounded-lg' src='/assets/imgs/bg.jpg'>
  </div>
</section>

<!-- project -->
<section class='container section mb-16'>
  <div class='sm:flex mb-10'>
    <div class='sm:w-1/3 mr-3'>
      <h2 class='uppercase text-4xl text-white mb-4' data-aos='fade-right'>
        {{projects.title}}
      </h2>
      <p class='text-white mb-4' data-aos-delay='200' data-aos='fade-up'>{{projects.description}}</p>
      <a class='text-white border rounded px-4 py-2 border-white hover:bg-white hover:text-secondary transition duration-300' data-aos-delay='400' data-aos='fade-up' href='/projects'>View All</a>
    </div>
    <div class='hidden sm:block sm:flex-1 rounded-lg pb-1/3' data-aos-delay='600' data-aos='fade-left' style='background-image: url({{projects.image}});background-position: center;background-repeat: no-repeat;background-size: cover;'></div>
  </div>
  <div class='swiper-container h-56 md:h-64 w-full' data-aos='fade-up'>
    <div class='swiper-wrapper'>
      {% for item in data.projects %}
        <div class='swiper-slide rounded-lg relative project-item' onclick='openModal({{item.images}})' style='background-image: url({{item.images[0]}});background-position: center;background-repeat: no-repeat;background-size: cover;'>
          <div class='absolute inset-0 bg-black bg-opacity-40 opacity-0 transition duration-300 flex items-center justify-center'>
            <h4 class='text-white font-bold text-xl'>{{item.name}}</h4>
          </div>
        </div>
      {% endfor %}
    </div>
    <div class='swiper-button-next swiper-button-white'></div>
    <div class='swiper-button-prev swiper-button-white'></div>
    <!-- Add Pagination -->
  </div>
</section>

<!-- decor -->
<section class='bg-gray-800 mb-8 pb-full sm:pb-1/2 lg:pb-1/3 relative'>
  <img alt='bg' class='absolute h-full w-full object-cover object-center' src='/assets/imgs/bg.jpg'>
  <div class='intro-section absolute inset-0'></div>
  <div class='absolute inset-0 container flex items-center'>
    <div class='w-full sm:w-1/2 md:w-1/3'>
      <h2 class='uppercase text-4xl text-white mb-4'>
        Decorations
      </h2>
      <p class='text-white mb-4'>{{projects.description}}</p>
      <a class='text-white border rounded px-4 py-2 border-white hover:bg-white hover:text-secondary transition duration-300' href='#collections'>Explore More</a>
    </div>
  </div>
</section>
