---
layout: base.liquid
---
<!-- projects -->
<section class='container section mt-64'>
  <h3 class='text-3xl mb-8'>PROJECTS</h3>
  <div class='projects flex'>
    <div class='grid-col sm:px-2 flex-1 grid-col--1'></div>
    <div class='grid-col px-2 flex-1 grid-col--2 hidden sm:block'></div>
    <div class='grid-col px-2 flex-1 grid-col--3 hidden md:block'></div>
    <div class='grid-col px-2 flex-1 grid-col--4 hidden lg:block'></div>
    {% for item in projects.items %}
      <div class='grid-item w-full mb-4' onclick='openModal({{item.images}},"{{settings.cloudinary_url}}")'>
        <div class='w-full relative project-item rounded-lg overflow-hidden'>
          <img src="{{settings.cloudinary_url}}{{item.images[0]}}" alt='' class='w-full '>
          <div class='absolute inset-0 bg-black bg-opacity-40 opacity-0 transition duration-300 flex items-center justify-center'>
            <h4 class='text-white font-bold text-xl'>{{item.name}}</h4>
          </div>
        </div>

      </div>
    {% endfor %}

  </div>
</section>