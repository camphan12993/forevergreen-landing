---
layout: base.liquid
---

{% assign cloudUrl = settings.cloudinary_url %}
<section class='mt-48 container section'>
  <h2 class='text-2xl sm:text-4xl mb-6 sm:mb-10 uppercase font-bold'>{{ title }}</h2>
  {% for cat in categories %}
    {% if cat.items %}
      <h3 class='text-sm sm:text-xl mb-8 uppercase font-bold '>
        <span class='px-4 py-2 rounded-full border-white border'>
          {{ cat.name }}
        </span>
      </h3>
      <div class='categories grid grid-cols-1 lg:grid-cols-2 gap-6 lg:gap-8 mb-10'>
        {% for item in cat.items %}
          <div class='mb-6' data-aos='fade-up'>
            <div class='pb-2/3 w-full rounded-lg mb-4 relative overflow-hidden' onclick='openModal({{item}},"{{cloudUrl}}")'>
              <img alt='thumnail' class=' absolute w-full h-full top-0 left-0 object-cover object-center transform hover:scale-110 transition duration-500' src='{{cloudUrl}}{{item.images[0]}}'></div>
            <div class='text-md font-bold mb-1'>{{item.name}}</div>
            {% if item.price %}
              <div class='font-thin opacity-60 tracking-widest'>{{item.price | | append: ' Ä‘'}}</div>
            {% endif %}
            {% if item.description %}
              <div class='font-thin opacity-60'>{{item.description}}</div>
            {% endif %}
          </div>
        {% endfor %}
      </div>
    {% endif %}

